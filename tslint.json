{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": false,
        "comment-format": [
            true,
            "check-space"
        ],
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "object-literal-sort-keys": false,
        "trailing-comma": false,
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ]
    },
    "rulesDirectory": []
}